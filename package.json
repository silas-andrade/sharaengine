{
  "name": "sharaengine-lint",
  "private": true,
  "devDependencies": {
    "prettier": "^2.8.8",
    "markdownlint-cli": "^0.34.0",
    "husky": "^8.0.0",
    "@commitlint/cli": "^17.6.0",
    "@commitlint/config-conventional": "^17.6.0",
    "conventional-changelog-cli": "^5.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:md": "markdownlint -c .markdownlint.json \"**/*.md\"",
    "changelog": "conventional-changelog -p angular -i Documentation/CHANGELOG.md -s -r 0"
  }
}
